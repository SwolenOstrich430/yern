// Table TODOs: 

Table users {
  id bigint [pk, increment]
  email email [unique, not null]
  first_name text [not null]
  last_name text [not null]
  display_name text [default: "concat(first_name, ' ', last_name)"]
  created_at timestamp [default: "now()"]
  updated_at timestamp [default: "now()"]
}

Table user_roles {
    user_id bigint [not null, ref: > users.id] // many-to-one relationship
    role_id bigint [not null, ref: > roles.id]
}

Table roles {
    id bigint [pk, increment]
    name text [unique, not null]
    // human-readable id for the role. E.g., admin. 
    identifier text [unique, not null]
}

Table yarn {
  id bigint [pk, increment]
  // will join to brands table 
  brand_id integer [not null, ref: > brands.id] 
  // will join to manufacturers table 
  manufacturer_id integer [not null, ref: > manufacturers.id]
  // will join to materials table 
  material_id integer [not null, ref: > materials.id]
  color color
  // different for each brand, probably just text 
  lot_number text 
  length_in_meters float [not null] 
  // either 
  weight_in_grams float [not null] 
  // will join to the thickness lookup table  
  thickness_id integer [not null]
  created_at timestamp [default: "now()"]
  updated_at timestamp [default: "now()"]
}

Table materials {
  id bigint [pk, increment]
  name text [not null]
  description text [not null]
  // may need to be an array of fibers 
  // or join to a different table (maybe fiber_blends/blends)
  fiber_id  [not null, ref: > fibers.id]
  created_at timestamp [default: "now()"]
  updated_at timestamp [default: "now()"]
}

// measures the circumference of the yarn 
// 0 = lace weight 
// 1 = fingering 
// 2 = sport 
// 3 = double-knitted 
// 4 = worsted 
// 5 = bulky 
// 6 = extra bulky 
// 7 = jumbo
Table thicknesses {
  id bigint [pk, increment]
  weight_number integer [not null]
  name text [not null]
  description text [not null]
  circumference float [not null]
  created_at timestamp [default: "now()"]
  updated_at timestamp [default: "now()"]
}

Table brands {
  id bigint [pk, increment]
  name text [not null]
  identifier text [not null]
  description text [not null]
  created_at timestamp [default: "now()"]
  updated_at timestamp [default: "now()"]
}

Table manufacturers {
  id bigint [pk, increment]
  name text [not null]
  identifier text [not null]
  description text [not null]
  created_at timestamp [default: "now()"]
  updated_at timestamp [default: "now()"]
}

Table fibers {
  id bigint [pk, increment]
  name text [not null]
  identifier text [not null]
  created_at timestamp [default: "now()"]
  updated_at timestamp [default: "now()"]
}